" use system clipboard"
set clipboard=unnamedplus

set number
set visualbell

" enable plugins
set surround
set commentary
set multiple-cursors

" set CTRl+J/K form the IDE (to move between tabs)
nmap <C-K> :action NextTab<cr>
nmap <C-J> :action PreviousTab<cr>
sethandler <C-K> a:vim
sethandler <C-J> a:vim

" <leader>
let mapleader = " "
" increment/decrement
nmap <leader>a <c-a>
nmap <leader>x <c-x>
" navigate tabs
nmap <leader>j :action PreviousTab<cr>
nmap <leader>k :action NextTab<cr>


